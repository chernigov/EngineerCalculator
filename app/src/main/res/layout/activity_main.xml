            android:layout_height="70dp"
            android:text="-"
            android:textSize="22sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="22sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"

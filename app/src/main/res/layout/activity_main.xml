            android:textSize="22sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="."
            android:textSize="22sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="22sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>

